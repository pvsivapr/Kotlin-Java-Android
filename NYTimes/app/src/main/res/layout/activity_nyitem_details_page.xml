<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="nyitemdetail"
            type="com.nytimes.networking.NYItemsModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39e5c3"
            android:orientation="horizontal">
            <ImageButton
                android:src="@drawable/left_arrow"
                android:id="@+id/nyitem_detail_back_button"
                android:layout_gravity="center"
                android:background="#00000000"
                android:layout_margin="10px"
                android:layout_width="120px"
                android:layout_height="120px"/>
            <TextView
                android:text=""
                android:id="@+id/nyitem_detail_page_title"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:id="@+id/ctrlActivityIndicator"
                android:indeterminateTint="#008080"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
        <WebView
            android:id="@+id/nyitem_detail_page_webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</layout>
