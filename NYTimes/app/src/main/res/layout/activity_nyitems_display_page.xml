<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39e5c3"
        android:orientation="horizontal">
        <ImageButton
            android:src="@drawable/menu_hamburger"
            android:id="@+id/imagebutton_menu_hamburger"
            android:layout_gravity="center"
            android:background="#00000000"
            android:onClick="onImageButtonTapped"
            android:layout_margin="10px"
            android:layout_width="120px"
            android:layout_height="120px"/>
        <TextView
            android:text="Title"
            android:id="@+id/nyitems_diaplay_page_title"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:src="@drawable/search_glass"
            android:id="@+id/imagebutton_search_icon"
            android:layout_gravity="center"
            android:background="#00000000"
            android:onClick="onImageButtonTapped"
            android:layout_margin="10px"
            android:layout_width="120px"
            android:layout_height="120px"/>
        <ImageButton
            android:src="@drawable/menu_vertical"
            android:id="@+id/imagebutton_menu_vertical_icon"
            android:layout_gravity="center"
            android:background="#00000000"
            android:onClick="onImageButtonTapped"
            android:layout_margin="10px"
            android:layout_width="120px"
            android:layout_height="120px"/>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/nyitems_swipe_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nyitems_list_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
