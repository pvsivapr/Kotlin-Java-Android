<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/timTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Start Intent Service"
        android:id="@+id/btn_start_time_time_viewer"
        android:onClick="StartServiceButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Stop Intent Service"
        android:id="@+id/btn_stop_time_time_viewer"
        android:onClick="StopServiceButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
